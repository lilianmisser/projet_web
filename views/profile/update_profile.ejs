<!DOCTYPE html>
<html>
<head>
    <%-include("../header")-%>
    <title>Update movie</title>
</head>
<body>
    <% if(isAdmin){ %>
        <%-include("../navbar/admin")-%>
    <% }else{%>
        <%-include("../navbar/user") -%>
    <% } %>
    <header>
        <h1> Update your profile </h1>
    </header>
    <% if(error){ %>
        <div class="alert alert-danger" role="alert">
            <%= error %>
        </div>
    <% } %>
    <a href ="/movies">Articles</a>
    <form method="POST" action="/profile/<%=user_data[0]["id_user"]%>">
        <div class="form-group">
            <label for="firstname">Firstname</label>
            <input type="text" class="form-control" id="firstname" placeholder="Enter firstname" name="firstname" value="<%=user_data[0]["firstname"]%>" required>
        </div>
        <div class="form-group">
            <label for="lastname">Lastname</label>
            <input type="text" class="form-control" id="lastname" placeholder="Enter lastname" name="lastname" value="<%=user_data[0]["lastname"]%>" required>
        </div>
        <div class="form-group">
            <label for="mail">Mail</label>
            <input type="text" class="form-control" id="mail" placeholder="Enter mail" name="mail" value="<%=user_data[0]["mail"]%>" required>
        </div>
        <button type="submit" class="btn btn-default">Update</button>
    </form>
    <%-include("../footer")-%>
</body>
</html>
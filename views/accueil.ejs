<!DOCTYPE html>
<html>
<head>
<%- include("header") -%>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@tarekraafat/autocomplete.js@7.2.0/dist/css/autoComplete.min.css">
    <title>Home</title>
</head>
<body>
    <% if(isAdmin){ %>
        <%-include("./navbar/admin")-%>
    <% }else{%>
        <%-include("./navbar/user") -%>
    <% } %>
    <header>
    </header>

    <div class="jumbotron jumbotron-fluid">
        <div class="container">
          <h1 class="display-4">Welcome to StreamHelper !</h1>
          <p class="lead">This is the place to find articles rated by our community to improve your streaming experience. Feel free to comment and rate the movies to help
          </p>
        </div>
    </div>

    <div class="container" style="width:216 ;height: 288;">
    <% if(nb_output>0){ %>
    
    <div id="myCarousel" class="carousel slide" data-ride="carousel" style="width:216px;height:288px;">
        <!-- Indicators -->
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <% for(i=1;i<nb_output;i++){%>
            <li data-target="#myCarousel" data-slide-to="<%=i%>"></li>
            <% }%>
        </ol>
      
        <!-- Wrapper for slides -->
        <div class="carousel-inner" >
            <div class="carousel-item active">
              <img src=<%= movies[0].image_path%> class="img-responsive" alt="Movie poster">
              <div class="carousel-caption d-none d-md-block">
                <h5><%=movies[0].name%></h5>
                <p><%=movies[0].nb_mark%> users have rated this movie, Average rate : <%=movies[0].avg%> !</p>
                <a href="/movies/<%=movies[0].id_movie%>">Article page</a>
              </div>
            </div>
        <% for(i=1;i<nb_output;i++){%>
          <div class="carousel-item">
            <img src=<%= movies[i].image_path%> class="img-responsive" alt="Movie poster">
            <div class="carousel-caption d-none d-md-block">
                <h5><%=movies[i].name%></h5>
                <p><%=movies[i].nb_mark%> users have rated this movie with an average rate of <%=movies[i].avg%> !</p>
                <a href="/movies/<%=movies[i].id_movie%>">Article page</a>
            </div>
          </div>
        <% }%>
        <!-- Left and right controls -->
        <a class="carousel-control-prev" href="#myCarousel" role="button" data-slide="prev">
          <span class=" on-left"></span>
          <span class="carousel-control-prev-icon"></span>
        </a>
        <a class="carousel-control-next" href="#myCarousel" role="button" data-slide="next">
          <span class="carousel-control-next-icon"></span>
          <span class="sr-only"></span>
        </a>
      </div>

    <% } %>
    </div>
    <%-include("footer")-%>
</body>
</html>
<!-- Autocompletion -->
<script>
  //Getting data from back (not the cleanest way)
var data = "<%=movies_name%>";
var movies_name = data.split(",");
var data2 = "<%=movies_id%>";
var movies_id = data2.split(",");
var data3 = "<%=movies_path%>"
var movies_path = data3.split(",");
const search = document.getElementById("search");
const matchList = document.getElementById("matches");

const searchMatch = async (input) => {    
  let matches = movies_name.filter(movie =>{
    const regex = new RegExp("^"+input, 'gi');
    return movie.match(regex);
  });
  
  if(input.length === 0){
    matches = [];
    matchList.innerHTML = "";
  }
  console.log(matches);
  showMatches(matches);
};

const showMatches = matches => {
  if(matches.length > 0){
    const html = matches.map(match =>
      `<div class="card">
      <div class="card-img">
          <img src=${movies_path[movies_name.indexOf(match)]} alt="Movie poster">
      </div>
      <div class="card-body">
          <p class="card-title">
            ${match}
          </p>
          <a href="/movies/${movies_id[movies_name.indexOf(match)]}">Go to</a>
      </div>
      <div>
      `).join("");
  
    matchList.innerHTML = html;
  }
};

search.addEventListener("input", () => searchMatch(search.value));
</script>